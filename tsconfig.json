{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2019"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
